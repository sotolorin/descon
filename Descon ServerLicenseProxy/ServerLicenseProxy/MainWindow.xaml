<Window x:Class="ServerLicenseProxy.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="License Proxy Running"
		Height="184"
		Width="417">
	<Grid>
		<Button Content="Exit"
				HorizontalAlignment="Left"
				Margin="260,93,0,0"
				VerticalAlignment="Top"
				Width="121"
				FontSize="16"
				Height="33"
				Click="btnExit_Click" />
		<TextBox x:Name="tbxPort"
				 HorizontalAlignment="Left"
				 Height="23"
				 Margin="121,14,0,0"
				 TextWrapping="Wrap"
				 Text="43000"
				 VerticalAlignment="Top"
				 Width="120"
				 FontSize="16"
				 MaxLength="5" />
		<Label Content="Listening Port"
			   HorizontalAlignment="Left"
			   Margin="10,10,0,0"
			   VerticalAlignment="Top"
			   FontSize="16" />
		<Button Content="Start"
				HorizontalAlignment="Left"
				Margin="10,93,0,0"
				VerticalAlignment="Top"
				Width="121"
				FontSize="16"
				Height="33"
				Click="btnStart_Click" />
		<Label x:Name="lblMessage"
			   Content="Enter port number and click Start."
			   HorizontalAlignment="Left"
			   Margin="10,46,0,0"
			   VerticalAlignment="Top"
			   FontSize="16"
			   Foreground="Red" />
	</Grid>
</Window>
